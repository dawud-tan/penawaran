<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/koordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="id.menawar.menerima.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat Offeree (Penerima)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/alamatOfferee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alamatOfferee" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/perikatanElektronikPasal18UUITE2008"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(sila ketik) Redaksi Perikatan Daring (Pasal 18 UU ITE 2008)"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Penyandian Dwimal Redaksi Perikatan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dwimalisasiRedaksiPerikatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skalar rahasia 's'-nya offeror (penawar), 77 digit">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kunciPenandatangananOfferor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanda Tangan Digital Offeror (Penawar) ed25519, R &amp; S">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ttdOfferor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Respon Offeree (Penerima)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/responOfferee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kunci Verifikasi ttdnya Offeree (Penerima) ed25519">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kunciVerifikasiOfferee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanda Tangan Digital Offeree (Penerima): R &amp; S">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ttdOfferee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlineBox.CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Verifikasi TTD Offeree (Penerima)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/verifikasiTtdOfferee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/baseline_send_24" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>